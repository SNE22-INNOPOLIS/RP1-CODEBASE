pipeline {
  agent any

  stages {
    stage('Build and Push Docker Image') {
      steps {
        sh 'docker build -t my-web-app .'
        sh 'docker tag my-web-app REGISTRY_URL/my-web-app:latest'
        sh 'docker push REGISTRY_URL/my-web-app:latest'
      }
    }
    stage('Deploy to Remote Server') {
      steps {
        sshagent(['ssh-key']) {
          sh 'ssh user@server "docker pull REGISTRY_URL/my-web-app:latest"'
        }
      }
    }
    stage('Restart Container on Remote Server') {
      steps {
        sshagent(['ssh-key']) {
          sh 'ssh user@server "docker stop my-web-app || true"'
          sh 'ssh user@server "docker run -p 80:8080 -d --name my-web-app REGISTRY_URL/my-web-app:latest"'
        }
      }
    }
  }
}
